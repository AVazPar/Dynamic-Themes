<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="?attr/color_main_background"
    tools:context=".ui.MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="?attr/dimen_spacing_medium"
        android:layout_marginTop="?attr/dimen_spacing_large"
        android:text="@string/home_header_title"
        style="@style/Heading1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/appCompatImageView"
        android:layout_width="?attr/dimen_image_profile_width"
        android:layout_height="?attr/dimen_image_profile_height"
        android:src="@drawable/profile"
        app:civ_border_width="?attr/dimen_image_profile_border"
        app:civ_border_color="?attr/color_border_profile"
        android:layout_marginTop="?attr/dimen_spacing_medium"
        android:layout_marginEnd="?attr/dimen_spacing_medium"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:background="#88FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="?attr/dimen_spacing_medium"
        android:layout_marginTop="?attr/dimen_spacing_medium"
        android:layout_marginEnd="?attr/dimen_spacing_medium"
        android:layout_marginBottom="?attr/dimen_spacing_medium"
        app:cardCornerRadius="?attr/dimen_card_corner_radius"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="?attr/dimen_spacing_medium"
                android:layout_marginTop="?attr/dimen_spacing_medium"
                android:layout_marginEnd="?attr/dimen_spacing_medium"
                android:text="@string/home_card_description"
                style="@style/ItemDescription"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="?attr/dimen_spacing_medium"
                android:layout_marginTop="?attr/dimen_spacing_small"
                android:layout_marginEnd="?attr/dimen_spacing_medium"
                android:text="@string/home_card_title"
                style="@style/ItemCardTitle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/card_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="?attr/dimen_spacing_medium"
                android:layout_marginTop="?attr/dimen_spacing_small"
                android:layout_marginEnd="?attr/dimen_spacing_medium"
                android:layout_marginBottom="?attr/dimen_spacing_medium"
                android:text="@string/home_card_detail"
                style="@style/ItemAmountPositive"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/card_amount"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                app:layout_constraintRight_toRightOf="@id/card_amount"
                app:layout_constraintTop_toTopOf="@id/card_amount"
                app:layout_constraintBottom_toBottomOf="@id/card_amount" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/investments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="?attr/dimen_spacing_medium"
        android:layout_marginEnd="?attr/dimen_spacing_medium"
        android:layout_marginTop="?attr/dimen_spacing_medium"
        android:text="@string/home_header_section"
        style="@style/Heading2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="?attr/dimen_spacing_small"
        android:background="@drawable/background_investments"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/investments">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_marginTop="?attr/dimen_spacing_medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>