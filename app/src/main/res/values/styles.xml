        <item name="android:lines">2</item>
        <item name="android:textColor">?colorTertiary</item>
        <item name="android:textSize">@dimen/text_heading_1_size</item>
        <item name="android:fontFamily">@string/font_family</item>
    </style>

    <style name="Heading2" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?colorTertiary</item>
