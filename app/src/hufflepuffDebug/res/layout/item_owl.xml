<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardCornerRadius="?attr/dimen_card_corner_radius"
    app:cardElevation="0dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/background_owl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/alert"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="@dimen/spacing_medium"
            android:layout_marginTop="@dimen/spacing_medium"
            android:tint="?attr/color_owl_text"
            android:src="@android:drawable/ic_popup_reminder"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/owl_text"
            style="@style/ItemOwlTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="@string/home_owl_text"
            app:layout_constraintBottom_toBottomOf="@+id/alert"
            app:layout_constraintStart_toEndOf="@+id/alert"
            app:layout_constraintTop_toTopOf="@+id/alert" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/owl_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/owl"
            app:civ_border_width="1dp"
            android:layout_marginStart="@dimen/spacing_small"
            app:civ_border_color="?attr/color_border_owl"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:layout_constraintLeft_toLeftOf="@id/alert"
            app:layout_constraintTop_toBottomOf="@id/owl_text"
            app:layout_constraintBottom_toBottomOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/animal_02"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/animal_01"
            app:civ_border_width="1dp"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:civ_border_color="?attr/color_border_owl"
            app:layout_constraintLeft_toRightOf="@id/owl_image"
            app:layout_constraintTop_toBottomOf="@id/owl_text"
            app:layout_constraintBottom_toBottomOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/animal_03"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/animal_02"
            app:civ_border_width="1dp"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:civ_border_color="?attr/color_border_owl"
            app:layout_constraintLeft_toRightOf="@id/animal_02"
            app:layout_constraintTop_toBottomOf="@id/owl_text"
            app:layout_constraintBottom_toBottomOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/animal_04"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/animal_03"
            app:civ_border_width="1dp"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_marginBottom="@dimen/spacing_medium"
            app:civ_border_color="?attr/color_border_owl"
            app:layout_constraintLeft_toRightOf="@id/animal_03"
            app:layout_constraintTop_toBottomOf="@id/owl_text"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView><?xml version="1.0" encoding="utf-8"?>
